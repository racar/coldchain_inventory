<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">
  <%= render 'layouts/header' %>
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Datos de la Institucion
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-home"></i> Home Page</a></li>
        <li class="active">Entidad</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <!-- left column -->
        <div class="col-md-6">
          <!-- general form elements -->
          <div class="box box-header">
            <div class="box-header with-border">
              <h3 class="box-title">Informacion Básica</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <%= form_for(@institucion) do |f| %>
              <% if @institucion.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@institucion.errors.count, "error") %> prohibited this institucion from being saved:</h2>

                  <ul>
                  <% @institucion.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>
              <div class="box-body">
               <div class="form-group">
                  <label>Nombre</label>
                  <%= f.text_field :name, autocomplete: "off", placeholder: "Ingrese nombre", class: "form-control", disabled: true %>
                </div>
                <div class="form-group">
                   <label>Municipio: </label>
                   <%= Municipio.find(@institucion.municipio_id).name %>
              </div>
               <div class="form-group">
                  <label>Caracter</label>
                  <%= f.select(:caracter, [["Publica","Publica"], ["Privada","Privada"]], {}, { :class => 'form-control' })%>
                </div>
                <div class="form-group">
                   <label>Direccion</label>
                   <%= f.text_field :direccion, autocomplete: "off", placeholder: "Ingrese direccion", class: "form-control", required: true  %>
                 </div>
                 <div class="form-group">
                    <label>Nit</label>
                    <%= f.text_field :nit, autocomplete: "off", placeholder: "Ingrese nit", class: "form-control", required: true  %>
                  </div>
                  <div class="form-group">
                     <label>Codigo de Habilitación</label>
                     <%= f.text_field :cod_habilitacion, autocomplete: "off", placeholder: "Ingrese codigo de habilitacion", class: "form-control", required: true  %>
                   </div>
                   <div class="form-group">
                      <label>Temperatura</label>
                      <%= f.text_field :temperatura, autocomplete: "off", placeholder: "Ingrese temperatura", class: "form-control", required: true  %>
                    </div>

              </div>
              <!-- /.box-body -->
              <div class="box-footer">
                <%= f.submit "Aceptar", class: "btn btn-primary"%>
<!--
                <div class="pull-right">
                  <%= link_to 'Delete account', current_user, method: :delete, data: { confirm: 'Are you sure? This action can not be reversed.' }, class: "btn btn-danger" %>
                </div>
              -->
              </div>
            <% end %>
          </div>
          <!-- /.box -->
        </div>
        <!--/.col (right) -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
  <%= render 'layouts/footer' %>
</body>
